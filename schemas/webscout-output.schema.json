{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://example.org/schemas/webscout-output.schema.json",
  "title": "WebScoutOutput",
  "type": "object",
  "additionalProperties": false,
  "required": ["search_results", "summary_evidence", "gaps"],
  "properties": {
    "search_results": {
      "type": "array",
      "items": {
        "type": "object",
        "additionalProperties": false,
        "required": ["evidence_id", "source_type", "title", "url", "abnt_citation"],
        "properties": {
          "evidence_id": { "type": "string" },
          "source_type": {
            "type": "string",
            "enum": ["primary_image", "museum_record", "academic_paper", "legal_text", "vocabulary"]
          },
          "title": { "type": "string" },
          "url": { "type": "string", "format": "uri" },
          "abnt_citation": { "type": "string" },
          "iconclass_candidates": {
            "type": "array",
            "items": { "type": "string" }
          },
          "notes": { "type": "string" },
          "score": { "type": "number", "minimum": 0, "maximum": 1 }
        }
      }
    },
    "summary_evidence": { "type": "string" },
    "gaps": {
      "type": "array",
      "items": { "type": "string" }
    }
  }
}
